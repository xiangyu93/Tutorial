<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/judge_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:background="#01bdfa"
            android:gravity="center"
            android:text="小组信息"
            android:textColor="@android:color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/back_begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_margin="10dp"
            android:background="#01bdfa"
            android:text="&lt; 返回"
            android:textColor="@android:color/white"
            android:textSize="17dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="组别:"
            android:textColor="#846300"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/add_group_num"
            style="@style/my_edit_style"
            android:layout_width="183dp"
            android:layout_height="58dp"
            android:inputType="numberSigned" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小组成员:"
            android:textColor="#846300"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/add_groupmember"
            style="@style/my_edit_style"
            android:layout_width="266dp"
            android:layout_height="56dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="答辩题目:"
            android:textColor="#846300"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/add_group_project"
            style="@style/my_edit_style"
            android:layout_width="288dp"
            android:layout_height="60dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/add_group_delete"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/remove" />

        <ImageButton
            android:id="@+id/add_group_cancel"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:background="@drawable/cancel" />

        <ImageButton
            android:id="@+id/add_group_store"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/store" />
    </LinearLayout>

    <Button
        android:id="@+id/beginjudge"
        style="@style/my_button_style"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="开始答辩"
        android:textColor="#846300"
        android:textSize="25dp" />

</LinearLayout>